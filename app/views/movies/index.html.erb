<h1><%=pluralize(@movies.size, 'Movie')%></h1>

<% @movies.each do |movie|%>
  <article>
    <h2><%= movie.title %></h2>
    <ul>
      <li>Rating: <%= movie.rating %></li>
      <li>Total Gross: <%= format_total_gross(movie) %></li>
      <li>Description: <%= truncate(movie.description, length: 40, separator: ' ') %></li>
      <li>Released: <%= movie.released_on.to_s(:release_date)%>, <%= time_ago_in_words(movie.released_on) %> ago</li>
      </ul>
  </article>
<% end %>
